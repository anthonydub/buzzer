doctype html
html
  head
    title=title
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href='/style.css')
  body
    header
      img.logo(src='/buzzer-logo.svg')

    div.container
      h2.js-active=`Personne ne joue à QPUP`
      button.js-lock='Bloquer les buzzers'
      button.js-unlock='Débloquer les buzzers'
      div.js-buzzes
        each buzz in buzzes
          h1=`${buzz.name}`

    script(src='/socket.io/socket.io.js')
    script(src='/host.js')